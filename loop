#include <stdio.h>
int main_loop(void)
{
	/*int a = 10;
	printf("a는 %d\n", a);
	a++;
	printf("a는 %d\n", a);*/

	/*int b = 20;
	printf("b는 %d\n", b++);
	printf("b는 %d\n", b);
	printf("b는 %d\n", ++b);*/

	// 반복문: for, while, do while
	//for(선언; 조건; 증감) {}

	/*for (int i = 1; i <= 10; i++) {
		printf("Hello World %d\n", i);
	}*/

	// while (조건) {}

	/*int i = 1;
	while (i <= 10) {
		printf("Hello World %d\n", ++i); // i = 2부터 시작
		printf("Hello World %d\n", i++); // i = 1부터 시작
	}*/

	// do {} while (조건)
	/*int i = 1;
	do {
		printf("Hellwo World %d\n", i++);

	} while (i <= 10);*/

	//2중 반복문

	/*for (int i = 1; i <= 3; i++) {
		printf("첫 번째 반복문: %d\n", i);

		for (int j = 1; j <= 10; j++) {
			printf("	두 번째 반복문: %d\n", j);
		}
	}*/

	// 구구단

	/*for (int i = 2; i <= 9; i++) {
		printf("\n%d단: \n", i);
		for (int j = 1; j <= 9; j++) {
			printf("%d x %d = %d\n", i, j, i * j);
		}*/

		/*  *
			**
			***
			****
			*****
			******
			******** 만들기*/

			/*for (int i = 1; i <= 10; i++) {
				for (int j = 1; j <= i; j++) {
					printf("*");
				}
				printf("\n");
			}*/

			/*     *
				  **
				 ***
				****
			   ***** 만들기*/

			   /*for (int i = 1; i <= 5; i++) {
				   for (int j = i; j <= 4; j++) {
					   printf(" ");
				   }
				   for (int k = 1; k <= i; k++) {
					   printf("*");
				   }
				   printf("\n");
			   }*/

			   // 프로젝트: 피라미드 쌓기
			   /*
				   *
				  ***
				 *****
				*******
			   *********
			   */

	int floor;
	printf("몇 층으로 쌓을까요?");
	scanf_s("%d", &floor);
	for (int i = 0; i < floor; i++) { // i = 층수 = floor
		for (int j = i; j < floor - 1; j++) { // 빈칸 = 층의 수 - 1, j = 0이면 각 층의 빈칸 수가 같아짐.
			printf(" ");
		}
		for (int k = 0; k < i * 2 + 1; k++) { // *의 수는 (2n+1)개이므로 1층이 1개이려면 k = 0부터 시작.
			printf("*");
		}
		printf("\n");
	}

	return 0;
}
